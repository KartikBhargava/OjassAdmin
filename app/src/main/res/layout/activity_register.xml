<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ojassadmin.nitjsr.in.ojassadmin.RegisterActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:textColor="#3498DB"
        android:text="Welcome to Ojass18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/welcome"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/admin_name"
            android:textSize="22sp"
            android:text="Adminname"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/admin_email"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="Email"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/admin_mobile"
            android:inputType="number"
            android:hint="Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/admin_branch"
            android:inputType="text"
            android:hint="Branch"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/admin_reg_id"
            android:inputType="text"
            android:hint="Registration ID"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="250dp"
        android:layout_height="50dp" />


</RelativeLayout>
