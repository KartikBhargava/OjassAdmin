<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ojassadmin.nitjsr.in.ojassadmin.EventsActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/toolbar_bg_color"
        android:id="@+id/add_events_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_below="@+id/search_page_toolbar"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_gravity="center_horizontal"
            android:background="@drawable/spinner_bg"
            android:id="@+id/spinner_add_event"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"></Spinner>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:text="Search by Ojasss ID"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/btn_text_size"
                android:textAllCaps="false"
                android:background="@drawable/button_bg"
                android:layout_gravity="center_vertical"
                android:id="@+id/search_by_ojass_id_event"
                android:text="Search"
                android:layout_width="140dp"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Search by email ID"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />


            <Button
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/btn_text_size"
                android:textAllCaps="false"
                android:background="@drawable/button_bg"
                android:layout_gravity="center_vertical"
                android:id="@+id/search_by_email_event"
                android:text="Search"
                android:layout_width="140dp"
                android:layout_height="45dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="Search by QR Code"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />


            <Button
                android:textColor="@color/btn_text_color"
                android:textSize="@dimen/btn_text_size"
                android:textAllCaps="false"
                android:background="@drawable/button_bg"
                android:layout_gravity="center_vertical"
                android:id="@+id/search_by_qr_code_event"
                android:text="Search"
                android:layout_width="140dp"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
